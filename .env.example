# ================================
# CONFIGURAÇÕES DO DJANGO
# ================================

# Chave secreta do Django (NUNCA usar essa em produção!)
SECRET_KEY=django-insecure-exemplo-mude-por-uma-chave-super-secreta-complexa

# Debug - SEMPRE False em produção
DEBUG=True

# Hosts permitidos (separados por vírgula)
ALLOWED_HOSTS=localhost,127.0.0.1

# ================================
# CONFIGURAÇÕES DO BANCO DE DADOS
# ================================

# Opção 1: URL completa do banco (mais fácil)
# DATABASE_URL=postgresql://usuario:senha@host:5432/nome_do_banco

# Opção 2: Configuração individual do PostgreSQL
DB_NAME=calendario_db
DB_USER=seu_usuario
DB_PASSWORD=sua_senha
DB_HOST=localhost
DB_PORT=5432

# ================================
# CONFIGURAÇÕES DO REDIS (OPCIONAL)
# ================================

# URL do Redis para cache e sessões
REDIS_URL=redis://localhost:6379/1

# ================================
# CONFIGURAÇÕES DO OAUTH2 (OPCIONAL)
# ================================

# Google OAuth2
# Obtenha em: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=seu-google-client-id-aqui
GOOGLE_CLIENT_SECRET=seu-google-client-secret-aqui

# GitHub OAuth2  
# Obtenha em: https://github.com/settings/developers
GITHUB_CLIENT_ID=seu-github-client-id-aqui
GITHUB_CLIENT_SECRET=seu-github-client-secret-aqui

# ================================
# CONFIGURAÇÕES DE EMAIL (OPCIONAL)
# ================================

# Para funcionalidade "Esqueci minha senha"
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=seu-email@gmail.com
EMAIL_HOST_PASSWORD=sua-senha-de-app-do-gmail
EMAIL_USE_TLS=True
DEFAULT_FROM_EMAIL=seu-email@gmail.com

# ================================
# CONFIGURAÇÕES DE PRODUÇÃO
# ================================

# Para deploy em produção, configure:
# SECRET_KEY=[gerar uma chave forte única]
# DEBUG=False
# ALLOWED_HOSTS=seu-dominio.com,www.seu-dominio.com
# DATABASE_URL=[URL do banco de produção]
# REDIS_URL=[URL do Redis de produção]

# ================================
# NOTAS IMPORTANTES
# ================================

# 1. NUNCA commite este arquivo com dados reais no Git
# 2. Use valores únicos e seguros para produção
# 3. Para gerar SECRET_KEY segura:
#    python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
# 4. Para Gmail, use "Senha de app" ao invés da senha normal
# 5. Configure OAuth2 apenas se quiser login social